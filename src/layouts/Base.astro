---
export interface Props {
  title: string
	description: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={Astro.props.description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		{
			import.meta.env.DEV && <>
			  <script is:inline src="//cdn.jsdelivr.net/npm/eruda"></script>
	  		<script is:inline>eruda.init();</script>
			</>
		}
	</head>
	<body>
		<slot />
	</body>
</html>
<script>
	console.log('Created by Shotaro Nakamura')
	console.log('https://github.com/nakasyou')
</script>
